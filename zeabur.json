{
  "services": [
    {
      "name": "trading-backend",
      "type": "python",
      "build": [
        "pip install -r requirements.txt"
      ],
      "start": "uvicorn main:app --host 0.0.0.0 --port 8000",
      "root": "backend"
    },
    {
      "name": "trading-frontend",
      "type": "node",
      "build": [
        "npm install",
        "npm run build"
      ],
      "start": "npm start",
      "root": "frontend",
      "env": {
        "PORT": "3000"
      }
    }
  ],
  "routes": [
    {
      "path": "/api",
      "service": "trading-backend"
    },
    {
      "path": "/",
      "service": "trading-frontend"
    }
  ]
}
